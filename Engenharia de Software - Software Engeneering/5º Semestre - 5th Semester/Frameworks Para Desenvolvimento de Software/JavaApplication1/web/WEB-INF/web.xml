<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <!-- Página inicial padrão -->
    <welcome-file-list>
        <welcome-file>cadastro.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Configuração para servir recursos estáticos -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <!-- Configuração do JSTL (opcional) -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>messages</param-value>
    </context-param>

    <!-- Exemplo de configuração de servlet (substitua pelo seu) -->
    <servlet>
        <servlet-name>CadastroController</servlet-name>
        <servlet-class>javaapplication1.controllers.CadastroController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroController</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>
</web-app>